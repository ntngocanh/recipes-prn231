@model BusinessObjects.DTO.UserDTO
<link rel="stylesheet" href="~/css/userProfile.css" />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="row g-0">
                <div class="col-md-4 avatar-container">
                    <div class="user-avatar">
                        @if (Model.Avatar != null && Model.Avatar.Trim().Length > 0)
                        {
                            <img src="~/images/fromUsers/@Model.Avatar" alt="...">
                        }
                        else
                        {
                            <img src="~/images/avatar.png" alt="...">
                        }
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text"><small class="text-muted">@Model.Email</small></p>
                    </div>
                </div>
            </div>
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="myrecipes">Các món</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Bộ sưu tập</a>
                </li>
            </ul>
        </div>
        <div class="section">
            <div class="font-weight-bold">@ViewBag.Collections.Count bộ sưu tập</div>
            <hr />
            @foreach (var item in ViewBag.Collections)
            {
               <div>@item.Name</div>
                <hr />
            }
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
<script>
    $(document).on("click", '[id^="card-"]', function () {
        window.location.href = "/Recipes/Details/" + $(this).attr("id").replace("card-", "");;
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
